version: '2'
services:
    api:
        network_mode: host
        restart: always
        build: ./api
        expose:
          - "8001"
        volumes:
          - /data/lea:/data/lea
        entrypoint: /usr/src/app/entrypoint.sh
    nginx:
        network_mode: host
        restart: always
        build: ./nginx
        ports:
          - "8080:8080"
        volumes_from:
          - api
        depends_on:
          - api
