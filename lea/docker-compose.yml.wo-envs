version: '2'
services:
    nginx:
        build: ./nginx
        restart: always
        ports:
          - "8080:8080"
        volumes_from:
          - api
        links:
          - api
    api:
        build: ./api
        restart: always
        ports:
          - "8001:8001"
        volumes:
          - /data/lea:/data/lea
        entrypoint: /usr/src/app/entrypoint.sh
